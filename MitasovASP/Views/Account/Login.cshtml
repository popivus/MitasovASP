@model MitasovASP.Data.Models.LoginModel
<style>
    header a {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 20px;
        color: #ffffff
    }

        header a:hover {
            color: #E6F5FF;
        }

    a {
        font-size: 15px;
        color: rgb(105, 105, 105);
    }

    footer a {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 15px;
        color: rgb(105, 105, 105);
        text-decoration: underline
    }

        footer a:hover {
            color: #E6F5FF;
            text-decoration: underline;
        }
</style>
@{
    ViewBag.title = "Вход";
}
<div align="center" class="main">
    <table cellspacing="40">
        <tr>
            <td valign="top"></td>
            <td>
                <div margin="17px" align="center" class="mainText">
                    <h1>Вход</h1>
                    <br>
                    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" align="center">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <table cellspacing="5px">
                            <tr>
                                <td align="right"><label asp-for="Email"></label></td>
                                <td><input maxlength="50" type="text" asp-for="Email" /></td>
                                <td><span asp-validation-for="Email"></span></td>
                            </tr>
                            <tr>
                                <td align="right"><label asp-for="Password"></label></td>
                                <td><input maxlength="30" type="password" asp-for="Password" /></td>
                                <td><span asp-validation-for="Password"></span></td>
                            </tr>
                        </table>
                        <br><input type="submit" value="Войти" align="center" /><br>
                        @Html.ActionLink("Забыли пароль?", "Repassword", "Account")<br>
                        @Html.ActionLink("Зарегистрироваться", "Registration", "Account")
                    </form>
                </div>
            </td>
        </tr>
    </table>
</div>